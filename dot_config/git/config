[alias]
aa = add .
ba = branch -a
c = checkout
cb = checkout -b
s = switch
sm = switch -
sc = switch -c
update = "!f() { git fetch $1; git rebase $1/$2; }; f"
cm = commit -m
cam = commit --amend -a -C HEAD
fixit = commit --amend --no-edit
st = status
f = fetch
r = rebase
lo = log --oneline
po = push origin HEAD
pf = push --force-with-lease origin HEAD

[user]
    name = yuk1ty
    email = yuk1ty@users.noreply.github.com
[filter "lfs"]
        clean = git-lfs clean -- %f
        smudge = git-lfs smudge -- %f
        process = git-lfs filter-process
        required = true

[core]
    pager = delta

[interactive]
    diffFilter = delta --color-only

[delta]
    navigate = true
    side-by-side = true
    line-numbers = true

[merge]
    conflictstyle = diff3

[diff]
    colorMoved = default
