# alias

alias awsc='ssh $(grep -w Host ~/.ssh/config | awk '\''{print $2}'\'' | peco) -v'
alias cat='bat'
alias grep='rg'
alias hex='hexyl'
alias k='kubectl'
alias cleandocker='docker compose down --rmi all --volumes --remove-orphans'
alias kc='kubectx | peco | xargs kubectx'
alias lazygit='lazygit -ucd ~/.config/lazygit'
alias ll='eza --icons -lah'
alias llt='eza --icons -lah -T -L2'
alias ls='eza --icons'
alias nv='nvim'
alias mux='tmuxinator'
alias prs='procs'
alias r='source ~/.zshrc'
alias tf='terraform'
alias v='vim'

autoload -U +X bashcompinit && bashcompinit
complete -o nospace -C /usr/local/bin/terraform terraform

function select-history() {
    BUFFER=$(history -n -r 1 | fzf --no-sort +m --query "$LBUFFER" --prompt="History > ")
    CURSOR=$#BUFFER
}

zle -N select-history
bindkey '^r' select-history

# Search GitHub repositories

fzf-src () {
    FZF_DEFAULT_OPTS="${FZF_DEFAULT_OPTS} --reverse --height=50%"
    local root="$(ghq root)"
    local repo="$(ghq list | fzf --preview="exa --tree --level=2 ${root}/{1}")"
    local dir="${root}/${repo}"
    [ -n "${dir}" ] && cd "${dir}"
    zle accept-line
    zle reset-prompt
}

zle -N fzf-src
bindkey '^w' fzf-src

fzf-z-search() {
    local res=$(z | sort -rn | cut -c 12- | fzf)
    if [ -n "$res" ]; then
        BUFFER+="cd $res"
        zle accept-line
    else
        return 1
    fi
}

zle -N fzf-z-search
bindkey '^f' fzf-z-search

# Load machine-specific config
if [[ -f ~/.zshrc.local ]]; then
    source ~/.zshrc.local
fi
